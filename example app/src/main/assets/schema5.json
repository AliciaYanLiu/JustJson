{
    "type": "object",
    "description" : "ontOf example for custom controllers",
    "properties": {
        "baseProperty1": {
            "title" : "baseProperty1",
            "type": "boolean"
        },
        "baseProperty2": {
            "title" : "baseProperty2",
            "enum" : [1,2,3,4,5,6]
        }
    },
    "oneOf": [
        {
            "title": "Option 1",
            "properties": {
                "controller1": {
                    "title" : "controller1",
                    "enum": ["bravo", "delta", "foxtrot"]
                },
                "additionalOption2": {
                    "title" : "additionalOption2",
                    "type": "string"
                },
                "additionalOption3": {
                    "title" : "additionalOption3",
                    "description" : "additional property 3",
                    "type": "boolean"
                },
                "additionalOption5": {
                    "title" : "additionalOption5",
                    "type": "object",
                    "properties" : {
                        "min" : {
                            "type" : "number",
                            "minimum" : 0,
                            "maximum" : 500
                        },
                        "max" : {
                            "type" : "number",
                            "minimum" : 50,
                            "maximum" : 600
                        }
                    }
                }


            },
            "required" : ["baseProperty1", "baseProperty2", "controller1", "additionalOption2"]
        },
        {
            "title": "option 2",
            "properties": {
                "controller1": {
                    "title" : "controller1",
                    "enum": ["alpha","charlie", "echo"]
                },
                "additionalOption2": {
                    "title" : "additionalOption2",
                    "type": "boolean"
                },
                "additionalOption3": {
                    "title" : "additionalOption3",
                    "type": "number"
                },
                "additionalOption4": {
                    "title" : "additionalOption4",
                    "type": "string"
                }
            },
            "required" : ["baseProperty1", "baseProperty2", "controller1", "additionalOption2", "additionalOption3"]
        },
        {
            "title": "option 3",
            "properties": {
                "controller1": {
                    "title" : "controller1",
                    "enum": ["alpha","charlie", "echo"]
                },
                "additionalOption2": {
                    "title" : "additionalOption2",
                    "type": "number"
                },
                "additionalOption3": {
                    "title" : "additionalOption3",
                    "type": "boolean"
                },
                "additionalOption4": {
                    "title" : "additionalOption4",
                    "type": "string"
                }
            },
            "required" : ["baseProperty1", "baseProperty2", "controller1", "additionalOption2", "additionalOption3"]
        },
        {
            "title": "option 4",
            "properties": {
                "controller1": {
                    "title" : "controller1",
                    "enum": ["alpha","charlie", "echo"]
                },
                "additionalOption2": {
                    "title" : "additionalOption2",
                    "type": "string"
                },
                "additionalOption3": {
                    "title" : "additionalOption3",
                    "type": "number"
                },
                "additionalOption4": {
                    "title" : "additionalOption4",
                    "type": "boolean"
                }
            },
            "required" : ["baseProperty1", "baseProperty2", "controller1", "additionalOption2", "additionalOption3"]
        },
        {
            "title": "option 5",
            "properties": {
                "location" : {
                		"title" : "Location",
                		"type" : "object",
                		"oneOf" :[ {
                				"properties" : {
                					"radius" : {
                						"type" : "integer",
                						"default" : "5"
                					},
                					"location" : {
                						"type" : "object",
                						"properties" : {
                							"lat" : {
                								"type" : "number"
                							},
                							"lon" : {
                								"type" : "number"
                							}
                						}
                					}
                				}
                			},
                            {
                				"properties" : {
                					"commune" : {
                						"type" : "string",
                						"items" : { "enum" : ["1200", "1000", "1080"] }
                					},
                					"region" : {
                						"type" : "array",
                						"items" : { "enum" : ["Brussels", "Liege", "Antwerp"] }
                					},
                					"province" : {
                						"type" : "array",
                						"items" : { "enum" : ["Brussels", "Liege", "Antwerp"] }
                					}
                				}
                			}
                		]
                	},
                "controller1": {
                    "title" : "controller1",
                    "enum": ["alpha","charlie", "echo"]
                },
                "additionalOption2": {
                    "title" : "additionalOption2",
                    "type": "boolean"
                },
                "additionalOption3": {
                    "title" : "additionalOption3",
                    "type": "string"
                },
                "additionalOption4": {
                    "title" : "additionalOption4",
                    "type": "number"
                }
            },
            "required" : ["baseProperty1", "baseProperty2", "controller1", "additionalOption2", "additionalOption3"]
