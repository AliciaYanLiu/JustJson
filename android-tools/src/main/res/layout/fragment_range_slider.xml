<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:context="org.djodjo.jjson.atools.JsonFragment"

    >

    <include layout="@layout/frag_header" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/minValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/maxValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

    <org.djodjo.jjson.atools.ui.widget.MultiSlider
        android:id="@+id/range_slider"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:orientation="horizontal"
        app:limitThumbRange="true"
        app:scaleMax="100"
        app:scaleMin="0"
        app:scaleStep="10"

        app:thumb="@drawable/multislider_scrubber_control_selector_holo_light"
        app:thumbs="2"
        app:thumbWidth="50dp"
        app:thumbHeight="50dp"

        app:track="@drawable/multislider_scrubber_track_holo_light"
        app:range="@drawable/multislider_scrubber_primary_holo"
        />

    <include layout="@layout/frag_footer" />

</LinearLayout>